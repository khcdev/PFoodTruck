<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <ImageView
            android:id="@+id/seller_store_detailinfo_img"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_margin="3dp"
            android:background="@drawable/img_gopizza_main"/>

    <LinearLayout
            android:id="@+id/seller_store_linearlayout_one"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/seller_store_detailinfo_img"
            android:paddingTop="20dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="매장명"
                    android:textSize="12dp"
                    android:textColor="@color/color10"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="GoPizza"
                    android:textSize="20dp"/>
        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="소유주"
                    android:layout_weight="1"
                    android:textSize="12dp"
                    android:textColor="@color/color10"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="박진현"
                    android:textSize="20dp"/>

        </LinearLayout>


    </LinearLayout>

    <TextView
            android:id="@+id/seller_store_textviewone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="매장소개    ------------------------------------------------------------------------------------------"
            android:layout_below="@+id/seller_store_linearlayout_one"
            android:textSize="12dp"
            android:paddingTop="30dp"
            android:paddingLeft="10dp"
            android:textColor="@color/color10"/>
    <TextView
            android:id="@+id/seller_textinput_store_introstore"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_below="@+id/seller_store_textviewone"
            android:textSize="20dp"
            android:lines = "2"
            android:paddingTop="2dp"
            android:paddingLeft="10dp"/>
    <TextView
            android:id="@+id/seller_store_textviewtwo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="한마디      ------------------------------------------------------------------------------------------"
            android:layout_below="@+id/seller_textinput_store_introstore"
            android:textSize="12dp"
            android:paddingTop="20dp"
            android:paddingLeft="10dp"
            android:textColor="@color/color10"/>
    <TextView
            android:id="@+id/seller_textinput_store_notification"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_below="@+id/seller_store_textviewtwo"
            android:textSize="20dp"
            android:lines = "3"
            android:paddingTop="2dp"
            android:paddingLeft="10dp"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="2dp">

        <Button
                android:id="@+id/intromodibutton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="매장소개 수정"
                android:layout_weight="1"
                android:background="@color/color10"
                android:textColor="@color/color6"
                android:textStyle="bold"
                android:layout_marginRight="2dp"/>

        <Button
                android:id="@+id/notimodibutton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="한마디 수정"
                android:layout_weight="1"
                android:background="@color/color10"
                android:textColor="@color/color6"
                android:textStyle="bold"
                android:layout_marginLeft="2dp"/>

    </LinearLayout>

</RelativeLayout>
