<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="horizontal" >

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="5dp">


        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/reivewformlayout_one"
                android:layout_marginBottom="5dp">

            <TextView
                    android:id="@+id/reviewform_writer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="writer"
                    android:textColor="@color/color10"/>

            <TextView
                    android:id="@+id/reviewform_score"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color11"
                    android:text="평점"
                    android:layout_toLeftOf="@+id/reviewform_data"/>

            <RatingBar
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="?android:attr/ratingBarStyleSmall"
                    android:layout_toLeftOf="@+id/reviewform_data"
                    android:rating="3.0"
                    android:layout_marginRight="8dp"
                    android:progressTint="@color/color11"/>

            <TextView
                    android:id="@+id/reviewform_data"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color10"
                    android:text="date"
                    android:layout_alignParentRight="true"/>

        </RelativeLayout>


        <TextView
                android:id="@+id/reviewform_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Text"
                android:layout_below="@+id/reivewformlayout_one"
                android:textSize="18dp"
        />


    </RelativeLayout>

</LinearLayout>
